# BNB Smart Chain (chain 56) – use when your Blockscout backend is available
# Copy to project root as .env.local (or use with yarn dev:preset bnb if you add a bnb preset)
# There is no public Blockscout instance for BSC; set NEXT_PUBLIC_API_HOST to your backend.

# App (local dev)
NEXT_PUBLIC_APP_PROTOCOL=http
NEXT_PUBLIC_APP_HOST=localhost
NEXT_PUBLIC_APP_PORT=3000
NEXT_PUBLIC_APP_ENV=development

# API – set to your Blockscout backend (e.g. api.afgscan.com or http://localhost:4000)
NEXT_PUBLIC_API_PROTOCOL=https
NEXT_PUBLIC_API_HOST=api.afgscan.com
NEXT_PUBLIC_API_BASE_PATH=/
NEXT_PUBLIC_API_WEBSOCKET_PROTOCOL=wss
NEXT_PUBLIC_USE_NEXT_JS_PROXY=false

# Blockchain – BNB Smart Chain
NEXT_PUBLIC_NETWORK_ID=56
NEXT_PUBLIC_NETWORK_NAME=BNB Smart Chain
NEXT_PUBLIC_NETWORK_SHORT_NAME=BSC
NEXT_PUBLIC_NETWORK_RPC_URL=https://bsc-dataseed.bnbchain.org
NEXT_PUBLIC_NETWORK_CURRENCY_SYMBOL=BNB
NEXT_PUBLIC_NETWORK_CURRENCY_NAME=BNB
NEXT_PUBLIC_NETWORK_CURRENCY_DECIMALS=18
NEXT_PUBLIC_NETWORK_TOKEN_STANDARD_NAME=BEP
NEXT_PUBLIC_NETWORK_VERIFICATION_TYPE=mining

# Optional: minimal UI (omit or add Stats/Marketplace etc. as needed)
NEXT_PUBLIC_HOMEPAGE_CHARTS=[]
NEXT_PUBLIC_HOMEPAGE_STATS=['total_blocks','average_block_time','total_txs','wallet_addresses']
